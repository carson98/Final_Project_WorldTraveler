<div class="content">
  <div class="row">
    <div class="col-md-12">
      <div class="card card-plain">
        <div class="card-body">
          <h4 class="text-warning"><strong>{{__ "Search Range Month"}}:</strong></h4>
          <form action="/tour/filter_Month" method="post">
            <div class="row">
              <div class="form-group col-4">
                <select class="form-control" name="searchMonth" id="searchMonth">
                  <option value="0">All Month</option>
                  <option value="01">January</option>
                  <option value="02">February</option>
                  <option value="03">March</option>
                  <option value="04">April</option>
                  <option value="05">May</option>
                  <option value="06">June</option>
                  <option value="07">July</option>
                  <option value="08">August</option>
                  <option value="09">September</option>
                  <option value="10">October</option>
                  <option value="11">November</option>
                  <option value="12">December</option>
                </select>
              </div>
              <div class="form-group col-4">
                <button type="submit" class="btn btn-warning">{{__ "Filter"}}</button>
              </div>
            </div>
          </form>
          <div class="table-responsive">
            <table class="table table-hover">
              <thead class="card-header card-header-warning">
                <th>
                  No.
                </th>
                <th>
                  {{__ "Tour Name"}}
                </th>
                <th>
                  {{__ "Tour Price"}}
                </th>
                <th>
                  {{__ "Total Quantity Booked"}}
                </th>
                <th>
                  {{__ "Total Tour Booked"}}
                </th>
                <th>
                  {{__ "Total Price"}}
                </th>
                <th>
                  {{__ "View"}}
                </th>
              </thead>
              <tbody>
                {{#each tours}}
                <tr>
                  <td>
                    {{this.number}}
                  </td>
                  <td>
                    {{this.title}}
                  </td>
                  <td>
                    $ {{this.price}}
                  </td>
                  <td>
                    {{this.orderInfo.qty}}
                  </td>
                  <td>
                    {{this.orderInfo.order}}
                  </td>
                  <td>
                    $ {{this.orderInfo.price}}
                  </td>
                  <td>
                    <a class="text-warning" href="/tour/tourDetail/{{this._id}}">{{__ "Detail"}}</a>
                  </td>
                </tr>
                {{/each}}
                <tr class="font-weight-bold text-uppercase">
                  <td></td>
                  <td>{{__ "Total all item"}}:</td>
                  <td></td>
                  <td>{{sumQuantity}}</td>
                  <td>{{sumOrder}}</td>
                  <td>$ {{sumProfit}}</td>
                  <td></td>
                </tr>
              </tbody>
              <nav class="pull-right" style=" padding-right: 50px; display: inline-block;">
                <ul class="pagination">
                  <li class="page-item">
                    <a class="page-link" style="color:#fea21f" href="#" aria-label="Previous">
                      <span aria-hidden="true">&laquo;</span>
                      <span class="sr-only">Previous</span>
                    </a>
                  </li>
                  <li class="page-item"><a class="page-link" style="color:#fea21f" href="/tour/tourList/1">1</a>
                  </li>
                  <li class="page-item"><a class="page-link" style="color:#fea21f" href="/tour/tourList/2">2</a>
                  </li>
                  <li class="page-item"><a class="page-link" style="color:#fea21f" href="/tour/tourList/3">3</a>
                  </li>
                  <li class="page-item"><a class="page-link" style="color:#fea21f" href="/tour/tourList/4">4</a>
                  </li>
                  <li class="page-item">
                    <a class="page-link" style="color:#fea21f" href="#" aria-label="Next">
                      <span aria-hidden="true">&raquo;</span>
                      <span class="sr-only">Next</span>
                    </a>
                  </li>
                </ul>
              </nav>
            </table>
            <div>
              <a href="/tour/tour-upload/new" class="btn btn-warning pull-right"
                type="button">{{__ "Create New Tour"}}</a>
              <a class="btn btn-warning pull-left" href="/tour/exportData" role="button">{{__ "Download"}}</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>