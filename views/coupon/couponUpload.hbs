<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-warning">
                        <h4 class="card-title">Create Coupon</h4>
                        <p class="card-category">Create information of this coupon</p>
                    </div>
                    <div class="card-body">
                        {{#if coupons}}
                        <form action="/coupon/couponUpload/{{coupons._doc._id}}" method="post">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="bmd-label-floating">Coupon ID:</label>
                                        <p>{{coupons._doc._id}}</p>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="bmd-label-floating">Coupon Description:</label>
                                        <input value="{{coupons._doc.description}}" id="description" name="description"
                                            type="text" class="form-control" required>
                                    </div>
                                </div>
                            </div>


                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="bmd-label-floating">Coupon Discount(%):</label>
                                        <input value="{{coupons._doc.discount}}" id="discount" name="discount"
                                            type="number" class="form-control" min="1" max="100">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="bmd-label-floating">Status:</label>
                                        <select selected id="active" name="active" class="form-control">
                                            <option value="true">Active</option>
                                            <option value="false">inActive</option>
                                        </select>
                                    </div>
                                </div>
                            </div>


                            <button type="submit" class="btn btn-warning pull-right">Upload</button>
                            <a href="../couponList/1" type="button" class="btn btn-warning pull-right">Back List</a>
                            <div class="clearfix"></div>
                        </form>
                        {{else}}
                        <form action="/coupon/couponUpload/new" method="post">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="bmd-label-floating">Counpon Description:</label>
                                        <input id="description" name="description" type="text" class="form-control"
                                            placeholder="Example (10%)" required>
                                    </div>
                                </div>
                            </div>


                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="bmd-label-floating">Coupon Discount(%):</label>
                                        <input id="discount" name="discount" type="text" class="form-control" required>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="bmd-label-floating">Status:</label>
                                        <select selected id="active" name="active" class="form-control">
                                            <option value="true">Active</option>
                                            <option value="false">inActive</option>
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="bmd-label-floating">Coupon number:</label>
                                        <input id="quantity" name="quantity" type="number" class="form-control" min="1"
                                            max="500" placeholder="From 1 to 500" required>
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-warning pull-right">Upload</button>
                            <a href="../couponList/1" type="button" class="btn btn-warning pull-right">Back List</a>
                            <div class="clearfix"></div>
                        </form>
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script src="/javascripts/core/jquery.min.js"></script>
<script>
    // Add the following code if you want the name of the file appear on select
    $(".custom-file-input").on("change", function () {
        var fileName = $(this).val().split("\\").pop();
        $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
    });
</script>