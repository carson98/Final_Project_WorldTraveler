<div class="content">
  <div class="container-fluid"></div>
  <div class="row">
    <div class="col-md-12">
      <div class="card card-plain">
        <div class="card-body">
          <h4 class="text-warning"><strong>{{__ "Status"}}:</strong></h4>
          <form action="/coupon/filter" method="post">
            <div class="row">
              <div class="form-group col-4">
                <select class="form-control" name="status" id="status">
                  <option value="0">Status</option>
                  <option value="true">Active</option>
                  <option value="false">inActive</option>
                </select>
              </div>
              <div class="form-group col-4">
                <button type="submit" class="btn btn-warning">{{__ "Filter"}}</button>
              </div>
            </div>
          </form>
          <div class="table-responsive">
            <table class="table table-hover">
              <thead class="card-header-warning">
                <th>
                  No.
                </th>
                <th>
                  {{__ "Coupon ID"}}
                </th>
                <th>
                  {{__ "Coupon Description"}}
                </th>
                <th>
                  {{__ "Discount"}}
                </th>
                <th>
                  {{__ "Status"}}
                </th>
              </thead>
              <tbody>
                {{#each coupons}}
                <tr>
                  <td>
                    {{this.number}}
                  </td>
                  <td>
                    {{this._doc._id}}
                  </td>
                  <td>
                    {{this._doc.description}}
                  </td>
                  <td>
                    {{this._doc.discount}}
                  </td>
                  <td>
                    {{this.status}}
                  </td>
                </tr>
                {{/each}}
              </tbody>
              <nav class="pull-right" style=" padding-right: 50px; display: inline-block;">
                <ul class="pagination">
                  <li class="page-item">
                    <a class="page-link" style="color:#fea21f" href="#" aria-label="Previous">
                      <span aria-hidden="true">&laquo;</span>
                      <span class="sr-only">Previous</span>
                    </a>
                  </li>
                  <li class="page-item"><a class="page-link" style="color:#fea21f" href="/coupon/couponList/1">1</a>
                  </li>
                  <li class="page-item"><a class="page-link" style="color:#fea21f" href="/coupon/couponList/2">2</a>
                  </li>
                  <li class="page-item"><a class="page-link" style="color:#fea21f" href="/coupon/couponList/3">3</a>
                  </li>
                  <li class="page-item"><a class="page-link" style="color:#fea21f" href="/coupon/couponList/4">4</a>
                  </li>
                  <li class="page-item">
                    <a class="page-link" style="color:#fea21f" href="#" aria-label="Next">
                      <span aria-hidden="true">&raquo;</span>
                      <span class="sr-only">Next</span>
                    </a>
                  </li>
                </ul>
              </nav>
            </table>
          </div>
          <div>
            <a type="button" class="btn btn-warning" style="color: #fff !important;" data-toggle="modal" data-target="#modelId">Send file
              coupon to customer</a>
            <a href="/coupon/download_Template" type="button" class="btn btn-warning pull-left">Create file coupon</a>
            <a href="/coupon/couponDetail/new" class="btn btn-warning pull-right" type="button">{{__ "Create New"}}</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="modelId" tabindex="-1" role="dialog" aria-labelledby="modelTitleId" aria-hidden="true"
    data-keyboard="false" data-backdrop="static">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Upload coupon file</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form enctype="multipart/form-data" action="/coupon/read_csv" method="post">
                    <input class="custom-file-input" type="file" id="file" name="file" accept=".csv" required />
                    <label class="custom-file-label" for="customFile">Choose file CSV</label>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-warning">Upload file</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>