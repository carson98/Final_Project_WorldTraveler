<div class="content">
  <div class="container-fluid"></div>
  <div class="row">
    <div class="col-md-12">
      <div class="card card-plain">
        <div class="card-body">
          <h4 class="text-warning"><strong>{{__ "Status"}}:</strong></h4>
          <form action="/coupon/filter" method="post">
            <div class="row">
              <div class="form-group col-4">
                <select class="form-control" name="status" id="status">
                  <option value="0">Status</option>
                  <option value="true">Active</option>
                  <option value="false">inActive</option>
                </select>
              </div>
              <div class="form-group col-4">
                <button type="submit" class="btn btn-warning">{{__ "Filter"}}</button>
              </div>
            </div>
          </form>
          <div class="table-responsive">
            <table class="table table-hover">
              <thead class="card-header-warning">
                <th>
                  No.
                </th>
                <th>
                  {{__ "Coupon ID"}}
                </th>
                <th>
                  {{__ "Coupon Description"}}
                </th>
                <th>
                  {{__ "Discount"}}
                </th>
                <th>
                  {{__ "Status"}}
                </th>
                <th>
                  {{__ "View"}}
                </th>
              </thead>
              <tbody>
                {{#each coupons}}
                <tr>
                  <td>
                    {{this.number}}
                  </td>
                  <td>
                    {{this._doc._id}}
                  </td>
                  <td>
                    {{this._doc.description}}
                  </td>
                  <td>
                    {{this._doc.discount}}
                  </td>
                  <td>
                    {{this.status}}
                  </td>
                  <td>
                    <a class="text-warning" href="/coupon/couponDetail/{{this._id}}">{{__ "Detail"}}</a>
                  </td>
                </tr>
                {{/each}}
              </tbody>
              <nav class="pull-right" style=" padding-right: 50px; display: inline-block;">
                <ul class="pagination">
                  <li class="page-item">
                    <a class="page-link" style="color:#fea21f" href="#" aria-label="Previous">
                      <span aria-hidden="true">&laquo;</span>
                      <span class="sr-only">Previous</span>
                    </a>
                  </li>
                  <li class="page-item"><a class="page-link" style="color:#fea21f" href="/coupon/couponList/1">1</a>
                  </li>
                  <li class="page-item"><a class="page-link" style="color:#fea21f" href="/coupon/couponList/2">2</a>
                  </li>
                  <li class="page-item"><a class="page-link" style="color:#fea21f" href="/coupon/couponList/3">3</a>
                  </li>
                  <li class="page-item"><a class="page-link" style="color:#fea21f" href="/coupon/couponList/4">4</a>
                  </li>
                  <li class="page-item">
                    <a class="page-link" style="color:#fea21f" href="#" aria-label="Next">
                      <span aria-hidden="true">&raquo;</span>
                      <span class="sr-only">Next</span>
                    </a>
                  </li>
                </ul>
              </nav>
            </table>
          </div>
          <div>
            <a href="/coupon/couponDetail/new" class="btn btn-warning pull-right" type="button">{{__ "Create New"}}</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>