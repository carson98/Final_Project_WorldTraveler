<div class="content">
  <div class="container-fluid"></div>
  <div class="row">
    <div class="col-md-12">
      <div class="card card-plain">
        <div class="card-header card-header-primary">
          <h4 class="card-title mt-0">Coupon List <a href="/coupon/couponDetail/new" class="btn btn-primary pull-right"
              type="button">Create New</a></h4>
          <p class="card-category">Synthesize information of each product</p>
        </div>
        <form action="/coupon/filter" method="post">
          <div class="row">
            <div class="form-group col-4">
              <select class="form-control" name="status" id="status">
                <option value="0">Status</option>
                <option value="true">Active</option>
                <option value="false">inActive</option>
              </select>
            </div>
            <div class="form-group col-4">
              <button type="submit" class="btn btn-primary">Filter</button>
            </div>
          </div>
        </form>

        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-hover">
              <thead class="text-primary">
                <th>
                  No.
                </th>
                <th>
                  Coupon ID
                </th>
                <th>
                  Coupon description
                </th>
                <th>
                  Discount
                </th>
                <th>
                  Status
                </th>
              </thead>
              <tbody>
                {{#each coupons}}
                <tr>
                  <td>
                    {{this.number}}
                  </td>
                  <td>
                    {{this._id}}
                  </td>
                  <td>
                    {{this.description}}
                  </td>
                  <td>
                    {{this.discount}}
                  </td>
                  <td>
                    {{this.status}}
                  </td>
                  <td>
                    <a class="text-primary" href="/coupon/couponDetail/{{this._id}}">Detail</a>
                  </td>
                </tr>
                {{/each}}
              </tbody>
              <nav class="pull-right" style=" padding-right: 50px; display: inline-block;">
                <ul class="pagination">
                  <li class="page-item">
                    <a class="page-link" style="color:blueviolet" href="#" aria-label="Previous">
                      <span aria-hidden="true">&laquo;</span>
                      <span class="sr-only">Previous</span>
                    </a>
                  </li>
                  <li class="page-item"><a class="page-link" style="color:blueviolet"
                      href="/coupon/couponList/1">1</a></li>
                  <li class="page-item"><a class="page-link" style="color:blueviolet"
                      href="/coupon/couponList/2">2</a></li>
                  <li class="page-item"><a class="page-link" style="color:blueviolet"
                      href="/coupon/couponList/3">3</a></li>
                  <li class="page-item"><a class="page-link" style="color:blueviolet"
                      href="/coupon/couponList/4">4</a></li>
                  <li class="page-item">
                    <a class="page-link" style="color:blueviolet" href="#" aria-label="Next">
                      <span aria-hidden="true">&raquo;</span>
                      <span class="sr-only">Next</span>
                    </a>
                  </li>
                </ul>
              </nav>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>