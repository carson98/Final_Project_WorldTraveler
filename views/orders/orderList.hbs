<div class="content">
  <div class="container-fluid"></div>
  <div class="row">
    <div class="col-md-12">
      <div class="card card-plain">
        <div class="card-body">
          <h4 class="text-warning"><strong>{{__ "Status"}}:</strong></h4>
          <form action="/order/filter_status" method="post">
            <div class="row">
              <div class="form-group col-4">
                <select class="form-control" name="status" id="status">
                  <option value="2">{{__ "Booking Status"}}</option>
                  <option value="Done">Done</option>
                  <option value="Pending">Pending</option>
                  <option value="Cancel">Cancel</option>
                </select>
              </div>
              <div class="form-group col-4">
                <button type="submit" class="btn btn-warning">{{__ "Filter"}}</button>
              </div>
            </div>
          </form>
          <div class="table-responsive">
            <table class="table table-hover">
              <thead class="card-header-warning">
                <th>
                  No.
                </th>
                <th>
                  {{__ "Order Date"}}
                </th>
                <th>
                  {{__ "User Email"}}
                </th>
                <th>
                  {{__ "Status"}}
                </th>
                <th>
                  {{__ "Total Tours"}}
                </th>
                <th>
                  {{__ "Total profit"}}
                </th>
                <th>
                  {{__ "View"}}
                </th>
              </thead>
              <tbody>
                {{#each orderList}}
                <tr>
                  <td>
                    {{this.number}}
                  </td>
                  <td>
                    {{this.orderDate}}
                  </td>
                  <td>
                    {{this.email}}
                  </td>
                  <td>
                    {{this.status}}
                  </td>
                  <td>
                    {{this.totalItem}}
                  </td>
                  <td>
                    $ {{this.totalPrice}}
                  </td>
                  <td>
                    <a class="text-warning"
                      href="/order/orderDetail/{{this.id}}-{{this.numberOrder}}">{{__ "Detail"}}</a>
                  </td>
                </tr>
                {{/each}}
              </tbody>
                            <nav class="pull-right" style=" padding-right: 50px; display: inline-block;">
                <ul class="pagination">
                  <li class="page-item">
                    <a class="page-link" style="color:#fea21f" href="#" aria-label="Previous">
                      <span aria-hidden="true">&laquo;</span>
                      <span class="sr-only">Previous</span>
                    </a>
                  </li>
                  <li class="page-item"><a class="page-link" style="color:#fea21f" href="/order/orderList/1">1</a>
                  </li>
                  <li class="page-item"><a class="page-link" style="color:#fea21f" href="/order/orderList/2">2</a>
                  </li>
                  <li class="page-item"><a class="page-link" style="color:#fea21f" href="/order/orderList/3">3</a>
                  </li>
                  <li class="page-item"><a class="page-link" style="color:#fea21f" href="/order/orderList/4">4</a>
                  </li>
                  <li class="page-item">
                    <a class="page-link" style="color:#fea21f" href="#" aria-label="Next">
                      <span aria-hidden="true">&raquo;</span>
                      <span class="sr-only">Next</span>
                    </a>
                  </li>
                </ul>
              </nav>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>